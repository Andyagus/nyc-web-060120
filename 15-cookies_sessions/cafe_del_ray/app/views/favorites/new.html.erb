<h1>Create Favorite</h1>

<%= form_for @favorite do |f| %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>

  <%= f.label :rating %>
  <%= f.number_field :rating %>

  <%= f.label :user_id %>
  <%= f.collection_select :user_id, @users, :id, :name %>

  <%= f.label :drink_id %>
  <%= f.collection_select :drink_id, @drinks, :id, :name_and_size %>

  <%= f.submit %>
<% end %>

  